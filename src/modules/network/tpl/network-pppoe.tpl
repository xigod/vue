<div id="pppoe-set" class="connect-type none">
  <div class="form-group" style="margin-bottom: 4px;">
    <label class="col-sm-4 col-md-3 control-label" for="wanPPPoEUser"></label>
    <div class="col-sm-8 help-block">This type is applicable if you have a user name and password for setting up a broadband dial-up connection.</div>
  </div>
  
  <div class="form-group">
    <label class="col-sm-4 col-md-3 control-label" for="wanPPPoEUser">User Name</label>
    <div class="col-sm-5 col-md-4">
      <input type="text" id="wanPPPoEUser" class="form-control validatebox" name="wanPPPoEUser" required="required" data-options='{"type": "ascii"}' maxLength="128"  />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 control-label" for="wanPPPoEPwd">Password</label>
    <div class="col-sm-5 col-md-4">
      <input type="password" id="wanPPPoEPwd" class="form-control validatebox" name="wanPPPoEPwd" required="required" data-options='{"type": "ascii"}'  maxLength="128"/>
    </div>
  </div>
</div>
